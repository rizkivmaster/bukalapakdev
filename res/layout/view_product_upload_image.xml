<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="150dip"
    android:orientation="vertical"
    android:padding="10dip"
    android:background="#000" android:layout_margin="5dip">
    <RelativeLayout android:layout_width="100dip"
        android:layout_height="100dip">
        <ImageView 
        android:layout_height="100dip"
        android:layout_width="100dip"
        android:id="@+id/thumb"
        android:src="@drawable/gradient_bg"
        />
        <ProgressBar
        android:id="@+id/progress"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:translationX="80dip"
        android:translationY="80dip" />
    <ImageView 
        android:id="@+id/finishIcon"
        android:visibility="invisible"
        android:background="@drawable/write_arrow"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:translationX="80dip"
        android:translationY="80dip"/>
    </RelativeLayout>
    <Button 
        android:text="BATAL"
        android:textColor="#000000"
        android:id="@+id/controlBtn"
        android:layout_width="100dip"
        android:layout_height="40dip"
        />
</LinearLayout>