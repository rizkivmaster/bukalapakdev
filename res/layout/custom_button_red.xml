<?xml version="1.0" encoding="utf-8"?>

<!-- Customization of Button -->
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#b1110b"
                android:endColor="#b1110b"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#b1110b" />
            <corners
                android:radius="0dp" />
            <padding 
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#b1110b"
                android:startColor="#b1110b"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#b1110b" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@null"
                android:startColor="@null"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#7a6737" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>